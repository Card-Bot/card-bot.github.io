---
permalink: api/cards
---
{% assign ids = 'x' %}
{"cards": [{% for entry in site.data %}
  {% assign data = entry[1] %}
   {
      "name": "{{data.name}}",
      "id": "{{ ids.size }}",
      "description": "{{data.description}}",
      "stats": {
         "packs": "{{data.packs | join: ', '}}",
         "tags": "{{data.tags | join: ', '}}",
         "price": "{{data.price}}"
      },
      "image": "{{data.link}}"
   },
  {% assign ids = ids | append: 'x' %}
{% endfor %}{}]
